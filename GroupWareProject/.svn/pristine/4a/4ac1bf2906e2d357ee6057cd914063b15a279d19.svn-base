<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- STDOUT(콘솔에 로그를 출력) -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	  <encoder>
	    <pattern>%d{yyyyMMdd HH:mm:ss.SSS} [%thread] %-3level %logger{5} - %msg %n</pattern>
	  </encoder>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="kr.or.ddit">
		<level value="debug" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.web">
		<level value="warn" />
	</logger>
	
	<logger name="_org.springframework.web.servlet.HandlerMapping.Mappings">
		<level value="OFF" />
	</logger>
	
	<!-- TILES 로그 설정 -->
	<logger name="org.apache.commons.digester.Digester" additivity="false">
  		<level value="OFF" />
	</logger>
  
  	<!-- LOG4JDBC 로그 설정 -->
	<!-- sql문만 로깅할지 여부 -->
	<logger name="jdbc.sqlonly">
		<level value="OFF" />
	</logger>
	<!-- 쿼리문 수행시간 로깅 여부 -->
	<logger name="jdbc.sqltiming">
		<level value="INFO" />
	</logger>
  <!-- ResultSet외 모든 JDBC 호출 정보 로깅할지 여부 -->
	<logger name="jdbc.audit">
		<level value="OFF" />
	</logger>
  <!-- ResultSet 포함 모든 JDBC 호출 정보를 로깅 -->
	<logger name="jdbc.resultsettable">
		<level value="INFO" />
	</logger>
	<logger name="jdbc.resultset">
		<level value="OFF" />
	</logger>
  <!-- connection open close 로깅 여부 -->
	<logger name="jdbc.connection">
		<level value="OFF" />
	</logger>
  
	<root level="WARN">
	  <appender-ref ref="STDOUT" />
	</root>
  
</configuration>
