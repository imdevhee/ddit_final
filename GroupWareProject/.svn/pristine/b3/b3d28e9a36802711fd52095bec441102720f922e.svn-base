		})
		.done(function(res) {
			$('#myStatus').find('p').text(res);
			toggleModal();
			$('#estbsContent').hide();
		})
	});
	
	window.addEventListener("click", function (event) {
		if (event.target === modal) {
			$('#estbsContent').hide();
			toggleModal();
		}
		
