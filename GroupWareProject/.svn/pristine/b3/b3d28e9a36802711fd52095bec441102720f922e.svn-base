	fileBtn.on('change', function(event) {
		let files = event.target.files;
		let formData = new FormData();
		
		for (let i in files) {
			let file = files[i];
			formData.append('files', file);
		}
		
		$.ajax({
			url: '/chat/talk/file',
			type: 'post',
