	}).on('mouseleave', function() {
		$(this).removeClass('fa-beat');
	})
	
	function viewTalkBox() {
		if(viewFlag){
			chatBox.fadeOut('fast', function() {
				chatBox.removeClass('w-100').addClass('w-25').fadeIn('slow');
				talkBox.fadeIn('slow');
			});
