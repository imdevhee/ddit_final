	});
	
	document.querySelector('.message-type-box').addEventListener('keydown', function(e) {
		if(e.key === 'Enter'){
	        // Start getting time
	        var now = new Date();
	        var hh = now.getHours();
	        var min = now.getMinutes();

	        var ampm = hh >= 12 ? "오후 " : "오전 ";
	        hh = hh % 12;
	        hh = hh ? hh : 12;
	        hh = hh < 10 ? "0" + hh : hh;
	        min = min < 10 ? "0" + min : min;

	        var time = ampm + hh + ":" + min;
	        // End
	        
			var chatInput = this;
			var message = chatInput.value;
			if (message === "") {
			    return;
			}
			
