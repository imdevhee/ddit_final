<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="kr.or.ddit.groupware.mapper.board.IBoardMapper">

	<select id="selectBoardList" resultType="BoardVO">
		select
			BBSCTT_NO, BBS_NO, EMPL_NO, BBSCTT_TITLE, BBSCTT_CN, BBSCTT_RDCNT, IMPRTNC_YN, DEL_YN, ATCH_FILE_GRP_NO, RGSDE, REGISTER, UPDDE, UPDUSR
		from board
		where del_yn = 'N'
	</select>


	<select id="selectBoard" parameterType="int" resultType="boardVO">
    select
        BBSCTT_NO, BBS_NO, EMPL_NO, BBSCTT_TITLE, BBSCTT_CN, BBSCTT_RDCNT, IMPRTNC_YN, DEL_YN, ATCH_FILE_GRP_NO, RGSDE, REGISTER, UPDDE, UPDUSR
    from board
    where BBSCTT_NO = #{bbscttNo}
	</select>
	
	
	<insert id="insertBoard" parameterType="boardVO" useGeneratedKeys="true">
    <selectKey keyProperty="bbscttNo" resultType="int" order="BEFORE">
        select seq_bbsctt.nextval from dual
    </selectKey>
    
    insert into board(
        BBSCTT_NO, BBS_NO, EMPL_NO, BBSCTT_TITLE, BBSCTT_CN, BBSCTT_RDCNT, IMPRTNC_YN, DEL_YN, ATCH_FILE_GRP_NO, RGSDE, REGISTER, UPDDE, UPDUSR
    ) values (
        #{bbscttNo}, -- 새로운 보드 번호
        #{bbsNo}, -- 보드 카테고리 번호 (부모 키)
        #{emplNo}, -- 직원 번호
        #{bbscttTitle}, -- 보드 제목
        #{bbscttCn}, -- 보드 내용
        #{bbscttRdcnt}, -- 조회 수
        #{imprtncYn}, -- 중요 여부
        #{delYn}, -- 삭제 여부
        #{atchFileGrpNo}, -- 첨부 파일 그룹 번호
        sysdate, -- 등록일
        #{register}, -- 등록자
        sysdate, -- 수정일
        #{updusr} -- 수정자
    )
</insert>

<update id="updateBoard" parameterType="boardVO">
	update board
	set
		bbsctt_no = #{bbscttNo},
		bbs_no = #{bbsNo},
		empl_no = #{emplNo},
		bbsctt_title = #{bbscttTitle},
		bbsctt_cn = #{bbscttCn},
		bbsctt_rdcnt = #{bbscttRdcnt},
		imprtnc_yn = #{imprtncYn},
		del_yn = #{delYn},
		atch_file_grp_no = #{atchFileGrpNo},
		rgsde = sysdate,
		register = #{register},
		updde = sysdate,
		updusr = #{updusr}
	where  where BBSCTT_NO = #{bbscttNo}

</update>

<update id="deleteBoard" parameterType="boardVO">
	update board
	set
		del_yn = 'Y'
	where BBSCTT_NO = #{bbscttNo}
	
</update>
</mapper>